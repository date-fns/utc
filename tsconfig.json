{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "outDir": "lib",
    "target": "ESNext",
    "module": "NodeNext",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "exclude": []
}
